(Простой калькулятор)

import java.sql.SQLOutput;
import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        System.out.println("Введите первое число:  ");
        float num1 = scan.nextFloat();
        System.out.println("Введите второе число:  ");
        float num2 = scan.nextFloat();
        float res1 = num1 + num2;
        float res2 = num1 - num2;
        float res3 = num1 * num2;
        float res4 = num1 / num2;

        System.out.println("Результат: ");
        System.out.println(res1 + "\n" + res2 + "\n" + res3 + "\n" + res4);

    }
}



public class Main {
    public static void main(String[] args) {
        //условные конструкции if-else
        int a = 15, b = 15;
        char sym1 = 'A', sym2 = 'A';
        boolean isHasCar = true;
        if(!isHasCar && a == b && sym1 != sym2)
        if(isHasCar){
            System.out.println("Да, верно");
        } else if(a >= b) {
            System.out.println("2 test");
        }
        else if(a <= b)
            System.out.println("3 test");

        else if(a == b)
            System.out.println("4 test");

        else if(a != b)
            System.out.println("5 test");

        else {

            System.out.println("Нет, не верно");
        }
    }
}

(switch-case)
import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        //Услоыне уонструкции switch-case
        Scanner scanner = new Scanner(System.in);
        System.out.println("Введите число");
        int num = scanner.nextInt();
        switch (num) {
            case 1:
                System.out.println("Number is 1");
                break;
            case 2:
                System.out.println("Number is 2");
                break;
            case 3:
                System.out.println("Number is 3");
                break;
            case 4:
                System.out.println("Number is 4");
                break;
            default:
                System.out.println("Default");
        }
    }
}



(Калькулятор  на свич-кейсах)
import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        //Услоыне уонструкции switch-case
        Scanner scanner = new Scanner(System.in);
        System.out.print("Введите первое число: ");
        int num1 = scanner.nextInt();

        System.out.print("Введите второе число: ");
        int num2 = scanner.nextInt();

        int res;

        System.out.println("Введите действие которое хотите исполнить: ");
        String action = scanner.nextLine();
        action = scanner.nextLine();

        switch (action) {
            case "+":
                res = num1 + num2;
                System.out.println("Результат" + res);
                break;
            case "-":
                res = num1 - num2;
                System.out.println("Результат:" + res);
                break;
            case "*":
                res = num1 * num2;
                System.out.println("Результат:" + res);
                break;
            case "/":
                if (num2 == 0)
                    System.out.println("Error");
                else {
                    res = num1 / num2;
                    System.out.println("Результат:" + res);
                }
                break;
            default:
                System.out.println("Вы что-то не то ввели...");
        }
    }
}


(Циклы и их операторы)
import java.lang.annotation.ElementType;
import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        //Циклы
        //for(float i = 100; i >10; i /= 2)
        //    System.out.println("Element:" + i);
//        int i = 100;
//        while(i > 5) {
//            System.out.println("Element" + i);
//            i -= 25;
//        }
        //do while
//        int i = 0;
//        do {
//            System.out.println("Element" + i);
//            i++;
//
//        } while(i < 10);
//
        for(int i = 5; i < 25; i += 2) {
            //continue-оператор цикла, продолжает итерацию если выполнено его условие
            if(i % 3 == 0)
            continue;
            //break - оператор цикла, пропуск оставшегося кода внутри цикла 
            // для текущей итерации и переход к следующей итерации.
            if(i >= 17)
                break;

            System.out.println("Element" + i);
        }

    }
}





(массивы данных)
import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        //Массивы данных
//        int[] nomera = new int[5];//массив с 5 значениями внутри
//        nomera[0] = 228;
//        nomera[1] = 147;
//        nomera[2] = 15;
//        nomera[3] = 122;
//        nomera[4] = 44;
//        int res = nomera[3] + nomera[0];
//        System.out.println(res);
//
//        float[] nomera2 = new float[] { 5.0f, 10.3f, 12.2f, 34.24f}; //массив
//        for(int i = 0; i < nomera2.length; i++) { //<-- выводим данные массива по возрастающей
//            System.out.println("Element" + nomera2[i]);
//        }
        //практическое применение
        int[] arr =  new int[4];
        Scanner scanner = new Scanner(System.in);

        for(int i = 0; i < arr.length; i++) {
            System.out.print("Введите число: ");//<--Запрос у пользоватеся чисел(кол во зависит от размера массива)
            int value = scanner.nextInt();
            arr[i] = value;
        }
        int min = arr[0];
        for(int i = 0; i < arr.length; i++) {
            if(arr[i] < min) //<-- Задаём массиву условие
                min = arr[i];
        }
        System.out.println("Minimal: " + min);
    }
}



(Многомерные массивы)
import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        //Многомерные массивы данных
        char[][] syms = new char[2][2];
        // [[4 , 5, 6], [7, 8, 9]] <-- Двумерный массив
        syms[0][0] = 't';
        System.out.println(syms[0][0]);
        byte[][] nums = new byte[][] {
                {5, 7}, //<--Нулевой элемент массива
                {2, 8}, //<--Первый
                {13, 3} //<-- второй и тд

        };
        nums[1][1] = 67;
        System.out.println(nums[1][1]);
        
//        for() //<--Перебирает первый массив(все {})
//            for() //<--Перебирает каждый вложанный массив
    }
}
